<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textIDListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgBgListItem"
        android:layout_alignTop="@+id/imgBgListItem"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="ID 1001735"
        android:textSize="8pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textNamaListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textIDListItem"
        android:layout_alignStart="@+id/imgBgListItem"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="ARMAN"
        android:textSize="6pt" />

    <TextView
        android:id="@+id/textBeratListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textNamaListItem"
        android:layout_alignStart="@+id/imgBgListItem"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="1 KG (REGULER)"
        android:textSize="6pt" />

    <TextView
        android:id="@+id/textHargaListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textBeratListItem"
        android:layout_alignStart="@+id/imgBgListItem"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="IDR 5.500"
        android:textSize="6pt" />


    <TextView
        android:id="@+id/textMasukListItem"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgBgListItem"
        android:layout_alignEnd="@+id/imgBgListItem"
        android:layout_marginTop="16dp"
        android:textAlignment="textEnd"
        android:layout_marginEnd="16dp"
        android:text="26/02/2023"
        android:textSize="6pt" />

    <TextView
        android:id="@+id/textKeluarListItem"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textMasukListItem"
        android:layout_alignEnd="@+id/imgBgListItem"
        android:layout_marginTop="4dp"
        android:textAlignment="textEnd"
        android:layout_marginEnd="16dp"
        android:text="28/02/2023"
        android:textSize="6pt" />

    <TextView
        android:id="@+id/textIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/textMasukListItem"
        android:text="⇀"
        android:textSize="12pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textIn"
        android:layout_marginTop="-12dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/textKeluarListItem"
        android:text="↽"
        android:textSize="12pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textStatusListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textKeluarListItem"
        android:layout_alignEnd="@+id/imgBgListItem"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:text="LUNAS"
        android:textSize="6pt" />

    <Button
        android:id="@+id/btnKonfirmasi"
        android:layout_width="88dp"
        android:layout_height="25dp"
        android:layout_below="@+id/textStatusListItem"
        android:layout_alignEnd="@+id/imgBgListItem"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_konfirmasi"
        android:text="KONFIRMASI"
        android:textColor="#FFFFFF"
        android:textSize="6pt" />

    <ImageView
        android:id="@+id/imgBgListItem"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_list_paid" />

</RelativeLayout>